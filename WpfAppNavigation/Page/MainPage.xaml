<Page x:Class="WpfAppNavigation.Page.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppNavigation.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Margin="0,30,0,0">
            <Label Content="Главная страница" />
            <Button x:Name="SettingsButton" Content="Настройки" Click="SettingsButton_OnClick" Width="100" Height="100" Margin="0,30,0,0"/>
            <Button x:Name="AboutButton" Content="О нас" Click="AboutButton_OnClick" Width="100" Height="100" Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</Page>
